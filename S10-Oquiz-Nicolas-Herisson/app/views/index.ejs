<%- include('partials/headerIndex') %>

<%- include('partials/nav') %>

    <!-- Corps de la page -->
    <main class="homepage">
      <!-- One quiz card element -->
      <% for( const quiz of quizzes) { %>
      <article class="quiz-card">
        <div class="quiz-card__img-block">
          <img
            src="<%= quiz.picture_url %>"
            class="quiz-card__img"
            alt="" />
          <div class="quiz-card__tags">
            <% for( let index = 0; index < quiz.tags.length; index++ ) { %>
              <span><%= quiz.tags[index].name %></span>
            <% } %>
           
          </div>
        </div>
        <div class="quiz-card__infos-block">
          <h2 class="quiz-card__title"><%= quiz.title %></h2>
          <p class="quiz-card__author">Par <%= quiz.user.firstname %> <%= quiz.user.lastname %></p>
          <a
            class="link-btn"
            href="/quiz/<%= quiz.id %>"
            >Jouer</a
          >
        </div>
      </article>


      <% } %>
      
        </main>

<%- include('partials/footer') %>